<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lmz.zhuanpandemo.MainActivity">

    <TextView
        android:id="@+id/djs_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/djs"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <com.lmz.zhuanpandemo.view.LuckyPanView
            android:id="@+id/id_luckypan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="30dp" />

        <ImageView
            android:id="@+id/id_start_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/zp_dpwq" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/ani_deng"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true" />


    <ImageView
        android:id="@+id/id_ani1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/a" />

    <ImageView
        android:id="@+id/id_ani2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/id_ani1_iv"
        android:src="@drawable/b" />

    <ImageView
        android:id="@+id/id_ani3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/id_ani2_iv"
        android:src="@drawable/b" />

    <ImageView
        android:id="@+id/start_game_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/start_game"
        android:visibility="gone" />
</RelativeLayout>
